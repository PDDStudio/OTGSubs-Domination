<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material" />
    <style name="DeskClockParentTheme" parent="@*android:style/Theme.Material">
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:colorControlActivated">#ff1976d2</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
    </style>
    <style name="AlarmSwitchTheme">
        <item name="android:colorControlActivated">#ff512da8</item>
    </style>
    <style name="FastScrollStyle" parent="@*android:style/Widget.Material.FastScroll">
        <item name="android:textSize">32.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:padding">16.0dip</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <style name="CitiesTheme.ActionBar" parent="@*android:style/Widget.Material.ActionBar">
        <item name="android:displayOptions">useLogo</item>
    </style>


    <style name="TextAppearance.StatusBar.EventContent" parent="@*com.android.deskclock:style/TextAppearance.StatusBar">
        <item name="android:textSize">@*com.android.deskclock:dimen/notification_text_size</item>
        <item name="android:textColor">#ffdddddd</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@*com.android.deskclock:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@*com.android.deskclock:dimen/notification_title_text_size</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


    <style name="PopupMenu" parent="@*android:style/Theme.Material" />
    <style name="TimeLabelTextAppearance" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">60.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="AmPmTextAppearance" parent="@*android:style/TextAppearance.Material">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


    <style name="TimePickerTheme" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:timePickerStyle">@*com.android.deskclock:style/TimePickerStyle</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
    <style name="TimePickerStyle" parent="@*android:style/Widget.Material.TimePicker">
        <item name="android:headerTimeTextAppearance">@*com.android.deskclock:style/TimeLabelTextAppearance</item>
        <item name="android:headerAmPmTextAppearance">@*com.android.deskclock:style/AmPmTextAppearance</item>
    </style>
    <style name="DeskClockDropDownListView" parent="@*android:style/Widget.Material.ListView.DropDown" />
    <style name="CitiesTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorAccent">#ff1976d2</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
