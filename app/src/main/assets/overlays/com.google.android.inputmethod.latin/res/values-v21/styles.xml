<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeSelector" parent="@*android:style/Theme.Material" />
    <style name="SettingsTheme" parent="@*android:style/Theme.Material.Settings" />
    <style name="platformActivityTheme" parent="@*android:style/Theme.Material" />
    <style name="platformSettingsTheme" parent="@*android:style/Theme.Material.Settings" />
    <style name="platformDialogTheme" parent="@*android:style/Theme.Material.Dialog" />
    <style name="Platform.V21.AppCompat.Light" parent="@*android:style/Theme.Material.NoActionBar">
        <item name="android:textColorHintInverse">#ffbbbbbb</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
    </style>


    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="android:elevation">@*com.google.android.inputmethod.latin:dimen/design_bottom_sheet_modal_elevation</item>
        <item name="*com.google.android.inputmethod.latin:behavior_peekHeight">auto</item>
        <item name="*com.google.android.inputmethod.latin:behavior_hideable">true</item>
        <item name="*com.google.android.inputmethod.latin:behavior_skipCollapsed">false</item>
    </style>
</resources>
