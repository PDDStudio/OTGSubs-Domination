<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BrowserTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:colorAccent">#ff1976d2</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="PreferencesTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorPrimary">#ff1976d2</item>
        <item name="android:colorPrimaryDark">#ff0d47a1</item>
        <item name="android:colorAccent">#ff1976d2</item>
    </style>
    <style name="DialogWhenLarge" parent="@*android:style/Theme.Material.DialogWhenLarge">
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="ActionBarStyle" parent="@*android:style/Theme.Material">
        <item name="android:background">#ff1976d2</item>
        <item name="android:displayOptions">none</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Suggestions" parent="@*android:style/Widget.Material.AutoCompleteTextView">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#ffbbbbbb</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
    <style name="ActionBar" parent="@*android:style/Widget.ActionBar">
        <item name="android:background">#ff1976d2</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
